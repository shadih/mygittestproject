	        <mapperFile>src/main/resources/valuepack/decomposedScenario/mappers.xml</mapperFile>
	        <fireAllRulesPolicy>EACH_ACCESS</fireAllRulesPolicy>
	        <globals></globals>
	        <processingMode>CLOUD</processingMode>
	        <rulesFiles><rulesFile>
			<filename>file:./src/main/resources/valuepack/decomposedScenario/rules.drl</filename>
			<name>decomposedScenario rules</name>
			<ruleFileType>DRL</ruleFileType>
		</rulesFile></rulesFiles>
	        <customLifeCycleClass>com.att.gfp.decomposed.decomposedScenario.DecomposedExtendedLifeCycle</customLifeCycleClass>
		<compressionMode>false</compressionMode>
		</scenario>
	</scenarios>
	
